<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/24.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="br.com.wtech.totem.controller.TelaInicialController"
          fx:id="root"
          prefWidth="800" prefHeight="600"
          stylesheets="@/css/telaInicial.css">

    <!-- 80% para imagem, 20% para painel branco -->
    <rowConstraints>
        <RowConstraints percentHeight="80" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="20"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints percentWidth="100"/>
    </columnConstraints>

    <!-- IMAGEM RESPONSIVA -->
    <ImageView fx:id="imgFundo"
               GridPane.rowIndex="0"
               GridPane.hgrow="ALWAYS"
               GridPane.vgrow="ALWAYS"
               smooth="true"
               pickOnBounds="true">
        <image>
            <Image url="@/imagens/tela_inicial.png"/>
        </image>
    </ImageView>

    <!-- PAINEL BRANCO INFERIOR -->
    <HBox fx:id="painelInferior"
          GridPane.rowIndex="1"
          styleClass="hbox-painel"
          alignment="CENTER_RIGHT"
          spacing="20">
        <padding>
            <Insets top="0" right="20" bottom="0" left="20"/>
        </padding>

        <!-- Logo à esquerda -->
        <ImageView fx:id="imgLogo"
                   fitHeight="80"
                   preserveRatio="true"
                   smooth="true"
                   pickOnBounds="true">
            <image>
                <Image url="@/imagens/logo_wt.png"/>
            </image>
        </ImageView>

        <!-- Espaço para centralizar hora -->
        <Region HBox.hgrow="ALWAYS"/>

        <!-- Hora no centro -->
        <Label fx:id="labelHora"/>

        <!-- Espaço para empurrar botão à direita -->
        <Region HBox.hgrow="ALWAYS"/>

        <!-- Botão Iniciar -->
        <Button fx:id="btnIniciar"
                text="Iniciar"
                onAction="#handleIniciar"/>
    </HBox>
</GridPane>