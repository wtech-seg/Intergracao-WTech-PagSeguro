<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="br.com.wtech.totem.controller.TelaInicialController">
    <children>

        <!-- IMAGEM DE FUNDO -->
        <ImageView fitWidth="800.0" fitHeight="600.0" preserveRatio="false">
            <image>
                <Image url="@/imagens/tela_inicial.png"/>
            </image>
        </ImageView>

        <!-- SOBREPOSIÇÃO COM BOTÃO E HORA -->
        <VBox alignment="BOTTOM_CENTER" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <Label fx:id="labelHora" style="-fx-font-size: 28px; -fx-text-fill: white;" />
            <Button fx:id="btnIniciar" text="INICIAR" onAction="#handleIniciar"
                    style="-fx-font-size: 24px; -fx-background-color: #00cc00; -fx-text-fill: white; -fx-pref-width: 200px; -fx-pref-height: 60px;" />
        </VBox>

    </children>
</AnchorPane>