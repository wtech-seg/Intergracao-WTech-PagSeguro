<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/11"
      fx:controller="br.com.wtech.totem.controller.BotaoCancelarController"
      alignment="CENTER_LEFT"
      spacing="8"
      styleClass="botao-cancelar-box">

    <Button fx:id="btnCancelar"
            styleClass="botao-cancelar"
            onAction="#handleCancelar">
        <graphic>
            <HBox alignment="CENTER" spacing="8">
                <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                    <image>
                        <Image url="@/imagens/cancelar.png"/>
                    </image>
                </ImageView>
                <Label text="Cancelar" styleClass="botao-cancelar-texto"/>
            </HBox>
        </graphic>
    </Button>
</HBox>